{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "ToDo Application for MindBox",
  "main": "index.js",
  "scripts": {
    "start": "npm run lint && npm run test:ci && webpack serve --mode development --open",
    "build": "npm run lint && npm run test:ci && webpack --mode production",
    "build:analyze": "npm run lint && npm run test:ci && webpack --mode production --analyze",
    "build:skip-tests": "webpack --mode production",
    "start:skip-tests": "webpack serve --mode development --open",
    "start:skip-lint": "npm run test:ci && webpack serve --mode development --open",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 2",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 2 --fix"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "lucide-react": "^0.511.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.56.4",
    "react-loading-skeleton": "^3.5.0",
    "react-redux": "^9.0.4",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@eslint/js": "^9.27.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.1.0",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "portfinder": "^1.0.37",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
